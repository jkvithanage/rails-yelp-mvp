<div class="container">
  <h1>Create Review for restaurant: <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :integer %>
    <%= f.button :submit, class: "btn btn-primary"  %>
  <% end %>

  <%= link_to "Back to resturant", restaurant_path(@restaurant), class: "btn btn-secondary mt-3" %>
</div>
