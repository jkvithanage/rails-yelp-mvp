<div class="container">
  <h1>Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant), class: "text-decoration-none" %></h2>
      </li>
    <% end %>
  </ul>
  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
